{
  "compilerOptions": {
    "lib": ["ESNext"],
    "outDir": "./dist",
    "removeComments": true,
    "target": "ES6",

    "baseUrl": "./src",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@services/*": ["services/*"],
      "@models/*": ["models/*"],
      "@middlewares/*": ["middlewares/*"],
      "@utils/*": ["utils/*"],
      "@validators/*": ["validators/*"],
      "@routes/*": ["routes/*"],
      "@constants": ["constants"]
    },

    "sourceMap": true,
    "sourceRoot": "/",

    "alwaysStrict": true,
    "noImplicitAny": true,
    // "strictNullChecks": true, TODO: dare to enable strictNullChecks (#｀-_ゝ-)
    "allowUnreachableCode": false,

    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
